<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="200dp"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_gravity="center">
    
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@color/blueDark"
        android:text="X"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/cercle_background"
        android:onClick="closeOrderDialog"
        android:clickable="true"/>
    <TextView
        android:id="@+id/close_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Order from Supplier by:"
        android:textColor="@color/blueDark"
        android:textAppearance="?android:textAppearanceLarge"
        android:fontFamily="sans-serif"
        android:layout_gravity="center" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blueLight"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/phone_btn_view"
            android:background="@color/orange"
            android:layout_width="0dp"
            android:drawableLeft="@drawable/baseline_phone_white_18"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Phone"
            android:textColor="@color/white"
            android:textAppearance="?android:textAppearanceLarge"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blueLight"/>

        <Button
            android:id="@+id/email_btn_view"
            android:background="@color/green"
            android:layout_width="0dp"
            android:drawableLeft="@drawable/baseline_email_white_18"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Email"
            android:textColor="@color/white"
            android:textAppearance="?android:textAppearanceLarge"/>
    </LinearLayout>


</LinearLayout>